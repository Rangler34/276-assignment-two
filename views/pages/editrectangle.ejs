<!DOCTYPE html>
<html>
<head>
  <%- include ("../partials/header.ejs") %>
  <link href="/stylesheets/db.css" rel="stylesheet" type="text/css">
</head>

<body>

<%- include ("../partials/nav.ejs") %>
<h2>Edit Rectangle</h2>
<% rows.forEach(function(r) { %>
<div class="form">  
<form class="edit" action="/editrectangle/<%= r.rectid %>" method="post">
  <input type="hidden" name="rectid">
  <input class="align" type="text" name="rectname" value="<%= r.rectname %>" placeholder="Name" required="required"/> <br>
  <input class="align" type="number" name="rectwidth" value="<%= r.rectwidth %>" placeholder="Width" required min="1"/> <br>
  <input class="align" type="number" name="rectheight" value="<%= r.rectheight %>" placeholder="Height" required min="1"/> <br>
  <h4>Please choose a colour</h4>
  <input type="radio" name="rectcolour" value="<%= r.rectcolour %>" checked>
  <label for="<%= r.rectcolour %>">Previous: <%= r.rectcolour %></label><br>
  <input type="radio" name="rectcolour" value="Red">
  <label for="Red">Red</label><br>
  <input type="radio" name="rectcolour" value="Blue">
  <label for="Blue">Blue</label><br>
  <input type="radio" name="rectcolour" value="Green">
  <label for="Green">Green</label><br>
  <input type="radio" name="rectcolour" value="Yellow">
  <label for="Yellow">Yellow</label><br>
  <input type="radio" name="rectcolour" value="Purple">
  <label for="Purple">Purple</label><br>
  <input type="radio" name="rectcolour" value="Orange">
  <label for="Orange">Orange</label><br>
  <input type="radio" name="rectcolour" value="Pink">
  <label for="Pink">Pink</label><br>
  <input class="editBtn" type="submit" name="sub" value="Save Edit">
  
</form>
</div>
<a href="/rectangleinformation/<%= r.rectid %>">
  <button class="backBtn">Go Back</button>
</a>
<% }); %>  
</body>
</html>
